@model IEnumerable<GiaoHangTietKiem.HangHoa>

@{
    ViewBag.Title = "IndexGoods";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>IndexGoods</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonVT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLHH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaTien)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenHH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonVT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaLHH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaTien)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditGoods", new { id=item.MaHH }) |
            @Html.ActionLink("Details", "DetailsGoods", new { id=item.MaHH }) |
            @Html.ActionLink("Delete", "DeleteGoods", new { id=item.MaHH })
        </td>
    </tr>
}

</table>
